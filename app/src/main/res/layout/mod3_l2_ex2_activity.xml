<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Text box to display numbers and result -->
    <EditText
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="none"
        android:gravity="right"
        android:padding="10dp"
        android:textSize="24sp"
        android:background="@android:color/darker_gray"
        android:layout_marginBottom="16dp" />

    <!-- First row of buttons (1, 2, 3, +) -->
    <Button
        android:id="@+id/button1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="1"
        style="?android:attr/buttonStyleSmall"
        android:layout_below="@id/display"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/button2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="2"
        style="?android:attr/buttonStyleSmall"
        android:layout_toRightOf="@id/button1"
        android:layout_alignTop="@id/button1" />

    <Button
        android:id="@+id/button3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="3"
        style="?android:attr/buttonStyleSmall"
        android:layout_toRightOf="@id/button2"
        android:layout_alignTop="@id/button2" />

    <Button
        android:id="@+id/buttonPlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/button3" />

    <!-- Second row of buttons (4, 5, 6, -) -->
    <Button
        android:id="@+id/button4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="4"
        style="?android:attr/buttonStyleSmall"
        android:layout_below="@id/button1"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/button5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="5"
        style="?android:attr/buttonStyleSmall"
        android:layout_toRightOf="@id/button4"
        android:layout_alignTop="@id/button4" />

    <Button
        android:id="@+id/button6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="6"
        style="?android:attr/buttonStyleSmall"
        android:layout_toRightOf="@id/button5"
        android:layout_alignTop="@id/button5" />

    <Button
        android:id="@+id/buttonMinus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/button6" />

    <!-- Third row of buttons (7, 8, 9, *) -->
    <Button
        android:id="@+id/button7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="7"
        style="?android:attr/buttonStyleSmall"
        android:layout_below="@id/button4"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/button8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="8"
        style="?android:attr/buttonStyleSmall"
        android:layout_toRightOf="@id/button7"
        android:layout_alignTop="@id/button7" />

    <Button
        android:id="@+id/button9"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="9"
        style="?android:attr/buttonStyleSmall"
        android:layout_toRightOf="@id/button8"
        android:layout_alignTop="@id/button8" />

    <Button
        android:id="@+id/buttonMultiply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/button9" />

    <!-- Fourth row of buttons (0, C, /, =) -->
    <Button
        android:id="@+id/button0"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="0"
        style="?android:attr/buttonStyleSmall"
        android:layout_below="@id/button7"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/buttonC"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="C"
        style="?android:attr/buttonStyleSmall"
        android:layout_toRightOf="@id/button0"
        android:layout_alignTop="@id/button0" />

    <Button
        android:id="@+id/buttonDivide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/buttonC" />

    <Button
        android:id="@+id/buttonEquals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="="
        android:layout_below="@id/button0"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" />

</RelativeLayout>