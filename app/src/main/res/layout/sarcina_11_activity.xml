<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D8DFDF"
    tools:context=".modul3.examples.Sarcina11Activity">
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:onClick="setDate"
        android:text="Setează" />
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Setează data în calendar"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#300202"
        android:textSize="16sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button1"
        android:layout_marginTop="138dp"
        android:layout_toLeftOf="@+id/button1"
        android:text="Rezultatul este:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#4A0303" />
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignRight="@+id/button1"
        android:layout_marginTop="-23dp"
        android:text="Ai selectat"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#130101"
        android:textStyle="bold" />
</RelativeLayout>